<%- include('partials/header', { title: 'Error - ACTISIS' }) %>

<% if (typeof user !== 'undefined' && user) { %>
    <%- include('partials/navbar', { user: user, page: 'error' }) %>
<% } %>

<div class="container mt-5 pt-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow-sm">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">Error</h4>
                </div>
                <div class="card-body">
                    <div class="text-center mb-4">
                        <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" fill="currentColor" class="bi bi-exclamation-triangle text-danger" viewBox="0 0 16 16">
                            <path d="M7.938 2.016A.13.13 0 0 1 8.002 2a.13.13 0 0 1 .063.016.15.15 0 0 1 .054.057l6.857 11.667c.036.06.035.124.002.183a.2.2 0 0 1-.054.06.1.1 0 0 1-.066.017H1.146a.1.1 0 0 1-.066-.017.2.2 0 0 1-.054-.06.18.18 0 0 1 .002-.183L7.884 2.073a.15.15 0 0 1 .054-.057m1.044-.45a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767z"/>
                            <path d="M7.002 12a1 1 0 1 1 2 0 1 1 0 0 1-2 0M7.1 5.995a.905.905 0 1 1 1.8 0l-.35 3.507a.552.552 0 0 1-1.1 0z"/>
                        </svg>
                    </div>
                    
                    <h2 class="text-center mb-4"><%= message %></h2>
                    
                    <div class="alert alert-danger">
                        <p><strong>Estado:</strong> <%= error.status %></p>
                        <% if (error.stack) { %>
                            <p><strong>Detalles:</strong> <%= error.stack %></p>
                        <% } %>
                    </div>
                    
                    <div class="text-center mt-4">
                        <a href="/" class="btn btn-outline-danger me-2">Ir al Inicio</a>
                        <% if (typeof user !== 'undefined' && user) { %>
                            <a href="/dashboard" class="btn btn-outline-secondary">Ir al Dashboard</a>
                        <% } else { %>
                            <a href="/login" class="btn btn-outline-secondary">Iniciar Sesi√≥n</a>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %>
