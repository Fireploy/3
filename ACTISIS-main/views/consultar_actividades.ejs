    // Funci贸n para generar PDF de todas las actividades filtradas
    function generarPDFLista(actividades) {
        const { jsPDF } = window.jspdf;
        const doc = new jsPDF();
        
        // T铆tulo
        doc.setFontSize(18);
        doc.setTextColor(200, 35, 51); // Color rojo UFPS
        doc.text('Listado de Actividades - ACTISIS', 105, 20, { align: 'center' });
        
        // Fecha de generaci贸n
        doc.setFontSize(10);
        doc.setTextColor(0, 0, 0);
        doc.text(`Fecha de generaci贸n: ${new Date().toLocaleDateString('es-ES')}`, 20, 30);
        
        // Tabla de actividades
        const tableColumn = ["Nombre", "Tipo", "Fecha Inicio", "Fecha Fin", "Lugar", "Responsable"];
        const tableRows = [];
        
        actividades.forEach(actividad => {
            const fechaInicio = formatearFecha(actividad.fechaInicio);
            const fechaFin = formatearFecha(actividad.fechaFin);
            
            const actividadData = [
                actividad.nombre,
                actividad.tipo,
                fechaInicio,
                fechaFin,
                actividad.lugar,
                actividad.responsable
            ];
            tableRows.push(actividadData);
        });
        
        doc.autoTable({
            head: [tableColumn],
            body: tableRows,
            startY: 40,
            styles: { fontSize: 8, cellPadding: 2 },
            headStyles: { fillColor: [200, 35, 51] }
        });
        
        // Pie de p谩gina
        const finalY = doc.lastAutoTable.finalY || 280;
        doc.setFontSize(10);
        doc.text('Universidad Francisco de Paula Santander - Programa de Ingenier铆a de Sistemas', 105, finalY + 10, { align: 'center' });
        
        // Guardar PDF
        doc.save('Listado_Actividades_ACTISIS.pdf');
    }
    
